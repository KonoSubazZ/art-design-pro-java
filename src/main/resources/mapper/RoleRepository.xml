<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.iboot.studio.infrastructure.persistence.repository.RoleRepository">

    <select id="listByUserId" resultType="com.iboot.studio.infrastructure.persistence.entity.Role">
        SELECT role.*
        FROM sys_role AS role
                 INNER JOIN sys_role_user AS user_role ON role.role_id = user_role.role_id
        WHERE
        user_role.user_id = #{userId}
    </select>

    <delete id="deleteRoleUserByUserId">
        DELETE FROM sys_role_user
        WHERE user_id = #{userId}
    </delete>

    <insert id="insertRoleUser">
        INSERT INTO sys_role_user (user_id, role_id)
        VALUES
        <foreach item="roleId" collection="roleIds" separator=",">
            (#{userId}, #{roleId})
        </foreach>
    </insert>
</mapper>